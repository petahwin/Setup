set smartindent
set shiftwidth=2
set softtabstop=2
set nu
syntax on
set ignorecase
set smartcase
set incsearch
set foldmethod=indent
set foldnestmax=10
set nofoldenable
set foldlevel=1
set mouse=a
set colorcolumn=80,100
" leader var stuff
let mapleader=','
map <leader><leader> <C-w><C-w>


" gvim settings
colorscheme desert
set guifont=Monospace\ 14

"indent guide settings
let g:indent_guides_start_level=2
let g:indent_guides_enable_on_vim_startup=1
